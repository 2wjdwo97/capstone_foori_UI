<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearItem_"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/boarder_result">

    <RelativeLayout
        android:id="@+id/linearItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center_vertical"
        android:background="@drawable/boarder_result">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/linearItem2"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="15dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@mipmap/ic_launcher"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="TITLE"
                    android:fontFamily="@font/jua"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/star"
                    android:layout_below="@id/Title"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/star_star"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/starpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/star"
                    android:layout_below="@id/Title"
                    android:text="별점"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/jua"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/korName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Korean Name: "
                    android:layout_below="@id/star"
                    android:fontFamily="@font/jua"
                    android:layout_marginBottom="3dp"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/set2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/korName"
                    android:text="@string/allegry"
                    android:fontFamily="@font/jua"
                    android:textColor="#FF0000"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/Allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jua"
                    android:layout_toEndOf="@id/set2"
                    android:text="알러지"
                    android:layout_below="@id/korName"
                    android:textColor="#FF0000"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearItem2"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이게 뭔 음식인데말야"
                android:fontFamily="@font/jua"
                android:textSize="15dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tag"
                android:layout_below="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이게 뭔 음식인데말야"
                android:fontFamily="@font/jua"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/button_gold"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:background="#F2F2F2">

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/jua"
            android:includeFontPadding="false"
            android:layout_marginLeft="16dp"
            android:text="@string/amount"
            android:textColor="@android:color/black"
            android:textSize="19sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:id="@+id/order"
                android:layout_centerInParent="true"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:background="@drawable/button_button">
            </ImageView>
            <TextView
                android:id="@+id/txt_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="Cart"
                android:layout_alignTop="@id/order"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="9dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/minus" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/prnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="15dp"
                android:fontFamily="@font/jua"
                android:textSize="16sp"
                android:text="0"
                android:textColor="@android:color/black" />
            <androidx.cardview.widget.CardView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/plus" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>