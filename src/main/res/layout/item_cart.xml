<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_whole"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/boarder_result">
    <RelativeLayout
        android:id="@+id/layout_food"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="13dp">
        <TextView
            android:id="@+id/txt_engName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="TITLE"
            android:fontFamily="@font/jua"
            android:textSize="28dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_korName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korean"
            android:layout_alignStart="@id/txt_engName"
            android:layout_below="@id/txt_engName"
            android:fontFamily="@font/jua"
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/txt_Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/jua"
            android:textColor="#000000"
            android:textSize="40dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="x"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>