<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearItem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/boarder_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/linearItem2"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_margin="15dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="TITLE"
                android:fontFamily="@font/jua"
                android:textSize="25dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/star"
                android:layout_below="@id/Title"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/star_star"
                >
            </ImageView>
            <TextView
                android:id="@+id/starpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/star"
                android:layout_below="@id/Title"
                android:text="별점"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/jua"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/korName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korean Name: "
                android:layout_below="@id/star"
                android:fontFamily="@font/jua"
                android:layout_marginBottom="3dp"
                android:textColor="#000000"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/korName"
                android:text="@string/allegry"
                android:fontFamily="@font/jua"
                android:textColor="#FF0000"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/Allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:layout_toEndOf="@id/set2"
                android:text="알러지"
                android:layout_below="@id/korName"
                android:textColor="#FF0000"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearItem2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이게 뭔 음식인데말야"
            android:fontFamily="@font/jua"
            android:textSize="15dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tag"
            android:layout_below="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이게 뭔 음식인데말야"
            android:fontFamily="@font/jua"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</RelativeLayout>